{
  "name": "e-transit-w",
  "version": "1.0.0",
  "description": "an application facilitating public transit",
  "main": "index.js",
  "scripts": {
    "test": "jest src/tests && codecov --token=928d58ba-7311-493a-8cba-7e71b5165b3e",
    "start": "node server.js",
    "start:dev": "webpack-dev-server --mode development --hot",
    "build": "webpack --mode production"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Efosaok/E-transit-w.git"
  },
  "keywords": [
    "BRT",
    "transportation",
    "E"
  ],
  "author": "Efosa Okpugie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Efosaok/E-transit-w/issues"
  },
  "homepage": "https://github.com/Efosaok/E-transit-w#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "express": "^4.16.3",
    "html-webpack-plugin": "^3.2.0",
    "logger": "0.0.1",
    "morgan": "^1.9.0",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-router-dom": "^4.3.1",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.11",
    "dotenv": "^6.0.0",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.1",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "jest": "^23.1.0",
    "jest-localstorage-mock": "^2.2.0",
    "nodemon": "^1.17.5",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.21.0",
    "webpack": "^4.12.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/assetsTransformer.js",
      "\\.(css|less|scss)$": "<rootDir>/assetsTransformer.js"
    },
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "setupTestFrameworkScriptFile": "<rootDir>/src/tests/__mocks__/setup.js",
    "testMatch": [
      "<rootDir>/src/tests/components/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/src/tests/__mocks__/",
      "<rootDir>/dist"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!<rootDir>/src/index.js"
    ],
    "globals": {
      "Materialize": true
    }
  }
}
